<header>
  <nav class="d-flex flex-row navbar navbar-expand-md navbar-dark bg-success col">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(!user){ %>
      <form class="form-inline my-2 my-lg-0" action="/login" method="post">
        <div class="form-group">
          <input name="username" class="form-control mr-sm-2" type="text" placeholder="Username" aria-label="Username">
          <button class="btn btn-light my-2 my-sm-0" type="submit">Login</button>
        </div>
      </form>
      <% } else{ %>
        <form class="form-inline my-2 my-lg-0" action="/logout" method="post">
          <div class="form-group d-inline-flex">
            <span class="text-light font-weight-normal mr-4">
              Logged in as:
              <span class="text-light font-weight-bold">
                <%= user.email %>
              </span>
            </span>
            <button class="btn btn-light my-2 my-sm-0" type="submit">Logout</button>
          </div>
        </form>
        <% } %>
  </nav>
</header>