<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <%- include('partials/_stylesheet') %>

    <title>URLs - TinyApp</title>
</head>

<body>

  <%- include('partials/_header') %>

    <main style="margin: 1em;">
      <% if(!user){ %>
        <h3>Please log in or register</h3>
        <% } else{ %>

          <h3>My URLs</h3>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Short URL ID</th>
                <th scope="col">Long URL</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% for (let id in urls) { %>
                <tr>
                  <td>
                    <%= id %>
                  </td>
                  <td>
                    <%= urls[id].longURL %>
                  </td>
                  <td>
                    <form method="GET" action="/urls/<%= id %>">
                      <button type="submit" name="id" class="btn btn-outline-primary">Edit</button>
                    </form>
                  </td>
                  <td>
                    <form method="POST" action="/urls/<%= id %>/delete">
                      <button type="submit" name="id" class="btn btn-outline-danger">Delete</button>
                    </form>
                  </td>
                </tr>
                <% } %>
            </tbody>
          </table>

          <% } %>
    </main>

    <%- include('partials/_scripts') %>

</body>

</html>